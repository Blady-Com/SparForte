procedure ParseMySQLMExecute is
  -- execute( Q, C );
  queryExpr : unbounded_string;
  queryType : identifier;
  query : resPtr;
  connectExpr : unbounded_string;
  connectType : identifier;
  connection : resPtr;
begin
  expect( mysqlm_execute_t );
  ParseFirstNumericParameter( queryExpr, queryType, mysqlm_query_t );
  ParseLastNumericParameter( connectExpr, connectType, mysqlm_connection_t );
  if isExecutingCommand then
     begin
       findResource( to_resource_id( connectExpr ), connection );
       findResource( to_resource_id( queryExpr ), query );
       Execute( query.Q, connection.C );
     exception when not_connected =>
       err( "not connected" );
     when abort_state =>
       err( "in abort state" );
     when sql_error =>
       err( Error_Message( query.Q ) );
     when others =>
       err( "exception raised" );
     end;
  end if;
end ParseMySQLMExecute;

