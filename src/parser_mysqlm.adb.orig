        put( " 1 Row" );
     else
        put( Tuple_Index_Type'image( tuples( Q ) ) );
        put( " Rows" );
     end if;
     if wasNull then
        put( " with nulls" );
     end if;
     if columns( Q ) = 1 then
        put( "and 1 Column" );
     else
        put( " and" );
        put( integer'image( columns( Q ) ) );
        put( " Columns" );
     end if;
     new_line;

     -- List of indexes: not available yet through information_schema

     prepare( Q, "show index from " & to_string( exprVal ) );
     begin
        execute( Q, connection.C );
     exception when others =>
        raise;
     end;

     if tuples( Q ) > 0 then
        put_line( "Indexes:" );
